{
  "name": "v4",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation eslint",
    "typecheck": "tsc --noEmit",
    "migrate": "pnpm payload migrate:create",
    "seed": "tsx -r dotenv/config src/scripts/seed/seed.ts",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@lexical/code": "0.35.0",
    "@lexical/history": "0.35.0",
    "@lexical/link": "0.35.0",
    "@lexical/list": "0.35.0",
    "@lexical/markdown": "0.35.0",
    "@lexical/react": "0.35.0",
    "@lexical/rich-text": "0.35.0",
    "@lexical/table": "0.35.0",
    "@lexical/utils": "0.35.0",
    "@payloadcms/db-postgres": "3.75.0",
    "@payloadcms/next": "3.75.0",
    "@payloadcms/richtext-lexical": "3.75.0",
    "@payloadcms/ui": "3.75.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@tailwindcss/postcss": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^10.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "17.2.4",
    "graphql": "^16.8.1",
    "lexical": "0.35.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "payload": "3.75.0",
    "postcss": "^8.5.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hook-form": "^7.71.1",
    "sharp": "0.34.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@faker-js/faker": "^10.3.0",
    "@playwright/test": "1.58.2",
    "@testing-library/react": "16.3.2",
    "@types/node": "^25.2.2",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "5.1.3",
    "eslint": "^10.0.0",
    "eslint-config-next": "16.1.6",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "28.0.0",
    "playwright": "1.58.2",
    "playwright-core": "1.58.2",
    "prettier": "^3.4.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "6.1.0",
    "vitest": "4.0.18"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ],
    "overrides": {
      "lexical": "0.35.0",
      "@lexical/react": "0.35.0",
      "@lexical/code": "0.35.0",
      "@lexical/history": "0.35.0",
